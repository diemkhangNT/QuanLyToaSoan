@model Tourist_VietripInsum_2023.Models.HinhAnh

@{
    ViewBag.Title = "ImportImage";
    Layout = "~/Views/NhaBao/Layout/LayoutNhaBa.cshtml";
    ViewBag.qlbb = "active";
    ViewBag.name = "Cung cấp hình";
}
<link href="~/Content/ImportImg/UploadImg.css" rel="stylesheet" />
<div class="container">
    <div class="tile">
        <h3 class="tile-title" style="text-align: center;">CUNG CẤP HÌNH</h3>
        <div class="form-group col-sm-12">
            <h3>Chọn hình</h3>
            <form id="imageUploadForm" method="post" enctype="multipart/form-data" action="~/NhaBao/ImportImage">
                @Html.HiddenFor(model => model.MaBaiBao)
                @Html.HiddenFor(model => model.MaHinhAnh)
                @Html.HiddenFor(model => model.TenHinhAnh)
                <input value="@ViewBag.id" id="id" name="id" style="visibility:hidden" />
                <div class="input-div" style="padding-top:5px;padding-bottom:5px">
                    <input type="file" class="listimg" id="listimg" name="listimg" multiple accept="image/png, image/jpeg, image/jpg">
                </div>
                <div id="saved-form">
                    <div class="saved-div"></div>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Cập nhật" class="btn btn-success btn-sm" />
                </div>
            </form>
        </div>

    </div>
    <div>
        <a asp-action="QuanLyBaiBao" class="btn btn-warning btn-sm">Bỏ qua</a>
    </div>
</div>
<script src="~/Content/ImportImg/UploadImg.js"></script>
